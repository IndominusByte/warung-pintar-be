            "title": "fullname",
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "phone": {
            "title": "phone",
            "minLength": 3,
            "maxLength": 20,
            "type": "string"
          },
          "address": {
            "title": "address",
            "minLength": 5,
            "type": "string"
          },
          "proof_of_payment": {
            "title": "proof_of_payment",
            "type": "string",
            "format": "binary"
          }
        }
