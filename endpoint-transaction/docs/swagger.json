            }
          }
        }
      },
      "CartCreateUpdate": {
        "title": "CartCreateUpdate",
        "required": ["operation", "product_id", "qty"],
        "type": "object",
        "properties": {
          "operation": {
            "title": "operation",
            "enum": ["create","update"],
            "type": "string"
          },
          "product_id": {
            "title": "product_id",
            "exclusiveMinimum": 1,
            "type": "integer"
          },
          "notes": {
            "title": "notes",
            "maxLength": 100,
            "minLength": 3,
            "type": "string"
          },
          "qty": {
            "title": "qty",
            "exclusiveMinimum": 1,
            "type": "integer"
          }
        }
      },
      "OrderCreate": {
        "title": "OrderCreate",
        "required": ["fullname", "phone", "address", "proof_of_payment"],
        "type": "object",
        "properties": {
